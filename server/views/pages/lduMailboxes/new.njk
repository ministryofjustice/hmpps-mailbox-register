{% extends "../../partials/layout.njk" %}

{% from "govuk/components/input/macro.njk" import govukInput %}
{% from "govuk/components/fieldset/macro.njk" import govukFieldset %}
{% from "govuk/components/button/macro.njk" import govukButton %}


{% set pageTitle = applicationName + " - New LDU Mailbox" %}
{% set mainClasses = "app-container govuk-body" %}

{% block content %}

  {{
    govukBreadcrumbs({
      items: [
        {
          text: "Home",
          href: "/"
        },
        {
          text: "Local Delivery Unit Mailboxes",
          href: "/local-delivery-unit-mailboxes"
        },
        {
          text: "New"
        }
      ]
    })
  }}

  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      <form method="post" action="/local-delivery-unit-mailboxes">
  
      {% call govukFieldset({
        legend: {
          text: "New Local Delivery Unit Mailbox",
          classes: "govuk-fieldset__legend--l",
          isPageHeading: true
        }
      }) %}
      
        {{ govukInput({
          label: {
            text: "Name"
          },
          id: "name",
          name: "name",
          value: submittedForm.name,
          errorMessage: errors | errorFor("name")
        }) }}
      
        {{ govukInput({
          label: {
            text: "Email Address"
          },
          id: "email-address",
          name: "emailAddress",
          value: submittedForm.emailAddress,
          errorMessage: errors | errorFor("emailAddress")
        }) }}
        
        {{ govukInput({
          label: {
            text: "Country"
          },
          id: "country",
          name: "country",
          classes: "govuk-!-width-two-thirds",
          value: submittedForm.country,
          errorMessage: errors | errorFor("country")
        }) }}
      
        {{ govukInput({
          label: {
            text: "Unit Code"
          },
          id: "unit-code",
          name: "unitCode",
          classes: "govuk-!-width-one-quarter",
          value: submittedForm.unitCode,
          errorMessage: errors | errorFor("unitCode")
        }) }}
      
        {{ govukInput({
          label: {
            text: "Area Code"
          },
          id: "area-code",
          name: "areaCode",
          classes: "govuk-!-width-one-quarter",
          value: submittedForm.areaCode,
          errorMessage: errors | errorFor("areaCode")
        }) }}
        
        <input type="hidden" name="_csrf" value="{{ csrfToken }}">

        {% call govukFieldset({
          legend: {
            text: "New Local Delivery Unit Mailbox",
            classes: "govuk-fieldset__legend--l",
            isPageHeading: true
          }
        }) %}

        {% set submitLabel = "Create mailbox" %}
        {% include "partials/lduMailboxes/form.njk" %}

      {% endcall %}

      </form>
    </div>
  </div>

{% endblock %}
